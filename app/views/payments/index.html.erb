<%= search_form_for @search, url: payments_path do |f| %>
  <div class="field">
    <%= f.label :month_eq, "Month" %>
    <%= f.select :month_eq, options_for_select(["January","February"]) %>
  </div>
  <div class="actions"><%= f.submit "Search" %></div>
<% end %>
<h1>All Payment Records</h1>
<%= link_to 'New Payment', new_payment_path,class: "btn btn-success pull-right" %>
<br>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Student</th>
      <th>Class</th>
      <th>Year</th>
      <th>Month</th>
      <th>Date</th>
      <th>Payment mode</th>
      <th>Tuition fee</th>
      <th>Fine</th>
      <th>Previous books</th>
      <th>Annual fund</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.student.name %></td>
        <td><%= payment.section.name %></td>
        <td><%= payment.year %></td>
        <td><%= payment.month %></td>
        <td><%= payment.date %></td>
        <td><%= payment.payment_mode %></td>
        <td><%= payment.tuition_fee %></td>
        <td><%= payment.fine %></td>
        <td><%= payment.previous_books %></td>
        <td><%= payment.annual_fund %></td>
        <td><%= payment.total %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

